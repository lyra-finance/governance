{
  "name": "lyra-governance",
  "description": "Lyra governance and related smart contracts",
  "version": "1.0.0",
  "license": "ISC",
  "scripts": {
    "clean": "hardhat clean && rimraf ./cache && rimraf ./artifacts",
    "compile": "hardhat compile",
    "build": "yarn clean && yarn compile",
    "test": "hardhat test",
    "test-e2e": "mocha --config .mocharc-e2e.js",
    "coverage": "hardhat coverage",
    "lint": "yarn run lint:sol && yarn run lint:ts && yarn run prettier:list-different",
    "lint:sol": "solhint --config ./.solhint.json --ignore-path .solhintignore --max-warnings 5 \"contracts/**/*.sol\"",
    "lint:sol:fix": "yarn lint:sol --fix",
    "lint:ts": "eslint --config ./.eslintrc.yaml --ignore-path ./.eslintignore --ext .js,.ts .",
    "lint:ts:fix": "yarn lint:ts --fix",
    "prettier:sol": "prettier --config .prettierrc --write \"contracts/**/*.sol\"",
    "prettier:ts": "prettier --config .prettierrc --write \"**/*.{js,ts}\"",
    "prettier": "prettier --config .prettierrc --write \"**/*.{js,json,md,sol,ts}\"",
    "prettier:list-different": "prettier --config .prettierrc --list-different \"**/*.{js,sol,ts}\"",
    "doc:uml": "sol2uml ./contracts -i mocks,test -f png -o ./docs/uml/lyra.png",
    "docify": "node docify.js",
    "docgen": "yarn doc:uml && yarn docify",
    "size": "hardhat size-contracts",
    "gas-report": "REPORT_GAS=true yarn run test",
    "deploy:token:mainnet": "hardhat run scripts/deployToken.ts --network mainnet",
    "deploy:token:kovan": "hardhat run scripts/deployToken.ts --network kovan",
    "deploy:token:local": "hardhat run scripts/deployToken.ts --network local",
    "deploy:distributor:optimism-mainnet": "hardhat run scripts/deployDistributor.ts --network optimism-mainnet",
    "deploy:distributor:optimism-kovan": "hardhat run scripts/deployDistributor.ts --network optimism-kovan",
    "deploy:distributor:local": "hardhat run scripts/deployDistributor.ts --network local",
    "deploy:multisender:optimism-mainnet": "hardhat run scripts/deployMultisender.ts --network optimism-mainnet",
    "deploy:multisender:optimism-kovan": "hardhat run scripts/deployMultisender.ts --network optimism-kovan",
    "deploy:multisender:local": "hardhat run scripts/deployMultisender.ts --network local",
    "deploy:testUSDC:kovan": "hardhat run scripts/test/deployTestUSDC.ts --network kovan",
    "deploy:testUSDC:local": "hardhat run scripts/test/deployTestUSDC.ts --network local",
    "deploy:safetyModules:mainnet": "hardhat run scripts/deploySafetyModules.ts --network mainnet",
    "deploy:safetyModules:kovan-ovm": "hardhat run scripts/deploySafetyModules.ts --network optimism-kovan",
    "deploy:safetyModules:kovan": "hardhat run scripts/deploySafetyModules.ts --network kovan",
    "deploy:safetyModules:local": "hardhat run scripts/deploySafetyModules.ts --network local",
    "wait:local": "wait-port 8545"
  },
  "dependencies": {
    "@eth-optimism/contracts": "^0.3.4",
    "@openzeppelin/contracts": "3.4.0-solc-0.7",
    "@openzeppelin/contracts-upgradeable": "3.4.1-solc-0.7-2"
  },
  "devDependencies": {
    "@aave/aave-stake-v2": "github:aave/aave-stake-v2#b9e40fb1c14df7e3874e4def53860d0f53c1d958",
    "@aave/aave-token": "1.0.4",
    "@aave/governance-v2": "1.0.0",
    "@aave/governance-crosschain-bridges": "1.0.2",
    "@eth-optimism/hardhat-ovm": "^0.2.2",
    "@eth-optimism/watcher": "^0.0.1-alpha.9",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.5",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^7.0.0",
    "@typechain/hardhat": "^2.0.1",
    "@types/chai": "^4.2.13",
    "@types/lowdb": "1.0.9",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.11.8",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "chai": "^4.2.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eth-sig-util": "^3.0.1",
    "ethereum-waffle": "^3.3.0",
    "ethereumjs-util": "^7.0.10",
    "ethers": "^5.1.3",
    "hardhat": "^2.2.0",
    "hardhat-contract-sizer": "^2.0.3",
    "hardhat-gas-reporter": "^1.0.4",
    "husky": "4.3.8",
    "lint-staged": "^11.0.0",
    "lowdb": "1.0.0",
    "mocha": "^8.1.3",
    "prettier": "^2.1.2",
    "prettier-plugin-solidity": "^1.0.0-beta.9",
    "sol2uml": "^1.1.25",
    "solc-0.7": "npm:solc@0.7.5",
    "solhint": "^3.3.4",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.16",
    "solidity-docgen": "^0.5.13",
    "ts-generator": "^0.1.1",
    "ts-node": "^8.10.2",
    "typechain": "^5.0.0",
    "typescript": "<4.1.0",
    "wait-port": "^0.2.9"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "contracts/**/*.sol": [
      "yarn prettier:sol",
      "yarn lint:sol:fix"
    ],
    "**/*.{js,ts}": [
      "yarn prettier:ts",
      "yarn lint:ts:fix"
    ]
  }
}
